{
  "name": "@jafps/plugin-schema",
  "version": "1.1.1",
  "description": "Fastify plugin for using typebox to handle JSON schemas.",
  "type": "module",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc",
    "test": "node --enable-source-maps --experimental-test-coverage --test-coverage-exclude \"src/**/__tests__/*.ts\" --test \"./dist/**/__tests__/*.{spec,test}.js\"",
    "lint": "eslint"
  },
  "author": "Joshua Avalon",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jafpsjs/plugin-schema.git"
  },
  "bugs": {
    "url": "https://github.com/jafpsjs/plugin-schema/issues"
  },
  "homepage": "https://github.com/jafpsjs/plugin-schema#readme",
  "imports": {
    "#error": {
      "import": "./dist/error/index.js"
    },
    "#fastify": {
      "import": "./dist/fastify/index.js"
    },
    "#formatter": {
      "import": "./dist/formatter/index.js"
    },
    "#schema": {
      "import": "./dist/schema/index.js"
    }
  },
  "exports": {
    ".": {
      "import": "./dist/index.js"
    }
  },
  "keywords": [
    "fastify",
    "fastify-plugin"
  ],
  "files": [
    "dist/**/*",
    "!dist/**/__tests__/**/*"
  ],
  "devDependencies": {
    "@jafps/plugin-error": "^1.0.1",
    "@joshuaavalon/eslint-config-javascript": "^10.0.0",
    "@joshuaavalon/eslint-config-typescript": "^10.0.0",
    "@types/node": "^24.9.1",
    "eslint": "^9.38.0",
    "fastify": "^5.6.1",
    "globals": "^16.4.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0"
  },
  "dependencies": {
    "fastify-plugin": "^5.1.0",
    "typebox": "^1.0.60"
  }
}
